// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id String @id
  email String @unique
  name String?
  password String
}

model Task {
  id String @id
  title String @unique
  description String
  userId String
  complete Boolean
  taskStatus String @default("to do")
  deadLineDate DateTime
}
